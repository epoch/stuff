{
  "parser"  : "babel-eslint",
  "extends": ["eslint:recommended"],
  "plugins": ["react"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser" : true, # window
    "node": true # require
  },
  "rules": {
    "strict": 0,
    "no-console": 0,
    "quotes": [2, "single"],
    "eqeqeq": 0,
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1    
  }
}
